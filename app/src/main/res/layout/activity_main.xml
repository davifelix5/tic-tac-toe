<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Jogador: X"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn11"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn21"
        android:layout_toStartOf="@id/btn12"
        android:backgroundTint="@color/black" />

    <Button
        android:id="@+id/btn12"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn22"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="5dp"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/btn13"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@id/btn12"
        android:layout_above="@id/btn23"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/btn21"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toStartOf="@id/btn22"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/btn22"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="5dp"
        android:backgroundTint="@color/black" />

    <Button
        android:id="@+id/btn23"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@id/btn22"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/btn31"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn21"
        android:layout_toStartOf="@id/btn32"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/btn32"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn21"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="5dp"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/btn33"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn21"
        android:layout_toEndOf="@id/btn32"
        android:backgroundTint="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resetar"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/design_default_color_error"/>

    <Button
        android:id="@+id/btnChangeMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mudar modo"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="@color/design_default_color_error"/>

    </LinearLayout>

</RelativeLayout>